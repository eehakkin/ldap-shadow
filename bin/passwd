###########################################################################
#
# Password change.
#
###########################################################################
# pam_ldap(8) from the nss-pam-ldapd packages is not slapo-ppolicy(5)
# compatible.
# Check if we are about to change the password for the current user account
# which is an LDAP user account which has a pwdReset attribute
# whose value is TRUE.
LOGNAME=${LOGNAME-${USER-$( exec id -un )}}
case ${#},${1-},${2-} in
*,*,*,* ) USER_DN= ;;
0,, | 1,--, | 1,"${LOGNAME}", | 2,--,"${LOGNAME}" )
	# If the user does not have an user specific LDAP configuration file,
	# use a user type specific LDAP configuration file.
	if
		[ -z "${LDAPRC++}" ] &&
		( [ ! -f  ~/ldaprc ] || [ ! -r  ~/ldaprc ] ) &&
		( [ ! -f ~/.ldaprc ] || [ ! -r ~/.ldaprc ] ) &&
		( [ ! -f    ldaprc ] || [ ! -r    ldaprc ] )
	then
		LDAPRC=~/../.ldaprc
		export LDAPRC
	fi
	USER_DN=$(
		ldapsearch -LLLMx -o ldif-wrap=no -z 1 -- \
			"(&(objectClass=posixAccount)(uid=${LOGNAME})(pwdReset=TRUE))" \
			1.1		\
			2> /dev/null	\
		| sed -e '/^dn: /!d' -e 's///' -e 'q'
		)
	;;
* ) USER_DN= ;;
esac
# If so, then ldap-passwd(1) must be used for changing the password.
# Otherwise, passwd(1) can be used for changing the password.
case ${USER_DN:++} in
+ ) exec "${0%passwd}ldap-passwd" ;;
* ) [ ! -f /usr/bin/passwd.real ] || exec /usr/bin/passwd.real "${@}"; exec /usr/bin/passwd "${@}" ;;
esac
